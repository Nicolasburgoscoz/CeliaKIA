<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/recipe_list_detail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="2dp"
      android:maxLines="1"
      android:paddingEnd="4dp"
      android:textColor="#000000"
      android:textSize="12sp"
      tools:text="Detail" />

  <RelativeLayout
      android:id="@+id/recipe_list_text_layout"
      android:layout_width="370dp"
      android:layout_height="160dp"
      android:layout_centerVertical="true"
      android:layout_marginStart="-194dp"
      android:layout_toStartOf="@id/recipe_list_detail"
      android:layout_toEndOf="@id/recipe_list_thumbnail"
      tools:ignore="NotSibling">

    <TextView
        android:id="@+id/recipe_list_subtitle"
        android:layout_width="214dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/recipe_list_thumbnail"
        android:ellipsize="end"
        android:maxLines="6"
        android:textSize="14sp"
        tools:text="Subtitle" />

    <ImageView
        android:id="@+id/recipe_list_fav"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="70dp"
        app:srcCompat="@drawable/icono_favoritos_vacio2" />

    <TextView
        android:id="@+id/recipe_list_title"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Title" />

    <ImageView
        android:id="@+id/recipe_list_thumbnail"
        android:layout_width="149dp"
        android:layout_height="136dp"
        android:layout_below="@+id/recipe_list_title"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-1dp"
        android:contentDescription="thumbnail"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/recipe_list_tiempo"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/icono_reloj2" />

    <ImageView
        android:id="@+id/recipe_list_dificultad_baja"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/recipe_list_thumbnail"
        android:layout_alignEnd="@+id/recipe_list_thumbnail"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/icono_dificultad_baja2" />

    <TextView
        android:id="@+id/recipe_list_numero_tiempo"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="9dp"
        android:text="Num" />

  </RelativeLayout>

</RelativeLayout>
