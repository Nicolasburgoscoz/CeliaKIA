<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">

    <LinearLayout
        android:id="@+id/authLayout"
        android:layout_width="385dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textoEmail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:fontFamily="@font/asap_bold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Ingresa"
            android:textAlignment="center"
            android:textColor="#72BB53"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="196dp"
        android:layout_height="104dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authLayout">

        <Button
            android:id="@+id/googleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="#FF3823"
            android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Google"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:backgroundTint="#3B5998"
            android:drawableStart="@drawable/icono_facebook"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Facebook"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="409dp"
        android:layout_height="264dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="#DFEDD6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoCeliakia"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:contentDescription="imagenLogoCeliakia"
            app:srcCompat="@drawable/celiakia3" />

        <TextView
            android:id="@+id/tituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/asap_bold"
            android:text="CeliaKIA"
            android:textColor="#000000"
            android:textSize="70sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtituloLogin"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="¿Ya estás listo para cocinar?"
            android:textColor="#35424A"
            android:textSize="18sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>